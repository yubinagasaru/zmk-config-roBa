#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,physical-layout = &roba_physical_layout;
    };
    
    roba_physical_layout: roba_physical_layout {
        compatible = "zmk,physical-layout";
        display-name = "Default";
        transform = <&default_transform>;
        kscan = <&kscan0>;
        
        keys  //                     w   h    x    y     rot    rx    ry
            = <&key_physical_attrs 100 100    0   37       0     0     0> // (0,0)
            , <&key_physical_attrs 100 100  100   37       0     0     0> // (0,1)
            , <&key_physical_attrs 100 100  200   12       0     0     0> // (0,2)
            , <&key_physical_attrs 100 100  300    0       0     0     0> // (0,3)
            , <&key_physical_attrs 100 100  400   12       0     0     0> // (0,4)
            , <&key_physical_attrs 100 100  500   24       0     0     0> // (0,5)

            , <&key_physical_attrs 100 100  900   24       0     0     0> // (0,7)
            , <&key_physical_attrs 100 100 1000   12       0     0     0> // (0,8)
            , <&key_physical_attrs 100 100 1100    0       0     0     0> // (0,9)
            , <&key_physical_attrs 100 100 1200   12       0     0     0> // (0,10)
            , <&key_physical_attrs 100 100 1300   37       0     0     0> // (0,11)
            , <&key_physical_attrs 100 100 1400   49       0     0     0> // (0,12)

            , <&key_physical_attrs 100 100    0  137       0     0     0> // (1,0)
            , <&key_physical_attrs 100 100  100  137       0     0     0> // (1,1)
            , <&key_physical_attrs 100 100  200  112       0     0     0> // (1,2)
            , <&key_physical_attrs 100 100  300  100       0     0     0> // (1,3)
            , <&key_physical_attrs 100 100  400  112       0     0     0> // (1,4)
            , <&key_physical_attrs 100 100  500  124       0     0     0> // (1,5)
            , <&key_physical_attrs 100 100  600  137       0     0     0> // (1,6)

            , <&key_physical_attrs 100 100  800  137       0     0     0> // (1,7)
            , <&key_physical_attrs 100 100  900  124       0     0     0> // (1,8)
            , <&key_physical_attrs 100 100 1000  112       0     0     0> // (1,9)
            , <&key_physical_attrs 100 100 1100  100       0     0     0> // (1,10)
            , <&key_physical_attrs 100 100 1200  112       0     0     0> // (1,11)
            , <&key_physical_attrs 100 100 1300  137       0     0     0> // (1,12)
            , <&key_physical_attrs 100 100 1400  149       0     0     0> // (1,13)

            , <&key_physical_attrs 100 100    0  237       0     0     0> // (2,0)
            , <&key_physical_attrs 100 100  100  237       0     0     0> // (2,1)
            , <&key_physical_attrs 100 100  200  212       0     0     0> // (2,2)
            , <&key_physical_attrs 100 100  300  200       0     0     0> // (2,3)
            , <&key_physical_attrs 100 100  400  212       0     0     0> // (2,4)
            , <&key_physical_attrs 100 100  500  224       0     0     0> // (2,5)
            , <&key_physical_attrs 100 100  600  237       0     0     0> // (2,6)

            , <&key_physical_attrs 100 100  800  237       0     0     0> // (2,7)
            , <&key_physical_attrs 100 100  900  224       0     0     0> // (2,8)
            , <&key_physical_attrs 100 100 1000  212       0     0     0> // (2,9)
            , <&key_physical_attrs 100 100 1100  200       0     0     0> // (2,10)
            , <&key_physical_attrs 100 100 1200  212       0     0     0> // (2,11)
            , <&key_physical_attrs 100 100 1300  237       0     0     0> // (2,12)
            , <&key_physical_attrs 100 100 1400  249       0     0     0> // (2,13)

            , <&key_physical_attrs 100 100    0  337       0     0     0> // (3,0)
            , <&key_physical_attrs 100 100  100  337       0     0     0> // (3,1)
            , <&key_physical_attrs 100 100  200  312       0     0     0> // (3,2)
            , <&key_physical_attrs 100 100  300  300       0     0     0> // (3,3)
            , <&key_physical_attrs 100 100  425  337       0     0     0> // (3,4)
            , <&key_physical_attrs 100 100  537  350    1000   537   350> // (3,5)
            , <&key_physical_attrs 100 100  650  387    2000   650   387> // (3,6)

            , <&key_physical_attrs 100 100  750  387 (-2000)   750   387> // (3,7)
            , <&key_physical_attrs 100 100  863  350 (-1000)     0   350> // (3,8)

            , <&key_physical_attrs 100 100 1300  337       0     0     0> // (3,11)
            , <&key_physical_attrs 100 100 1400  349       0     0     0> // (3,12)

            ;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <13>;
        rows = <4>;               
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)                     RC(0,7) RC(0,8) RC(0,9) RC(0,10)  RC(0,11) RC(0,12)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6)     RC(3,7) RC(1,7) RC(1,8) RC(1,9) RC(1,10)  RC(1,11) RC(1,12)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6)     RC(3,8) RC(2,7) RC(2,8) RC(2,9) RC(2,10)  RC(2,11) RC(2,12)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6)     RC(3,9) RC(3,10)                          RC(3,11) RC(3,12)
        >;
    };
    
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
            row-gpios
                = <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
                , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
                , <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 
                , <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> 			
                ;
    };

    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&xiao_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <12>;
        status = "disabled";
    };

    right_encoder: encoder_right {
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder>;
        triggers-per-rotation = <10>;
    };
};
